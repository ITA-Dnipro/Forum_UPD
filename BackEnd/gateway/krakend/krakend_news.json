{
  "version": 3,
  "name": "RestApiGateway",
  "endpoints": [
    {
      "endpoint": "/news",
      "method": "GET",
      "backend": [
        {
          "host": [
            "http://news-service:8000"
          ],
          "url_pattern": "/api/news"
        }
      ],
      "extra_config": {
        "permissions": "AllowAny"
      }
    },
    {
      "endpoint": "/news/{news_id}",
      "method": "GET",
      "backend": [
        {
          "host": [
            "http://news-service:8000"
          ],
          "url_pattern": "/api/news/{news_id}"
        }
      ],
      "extra_config": {
        "permissions": "AllowAny"
      }
    },
    {
      "endpoint": "/news/{news_id}",
      "method": "DELETE",
      "backend": [
        {
          "host": [
            "http://news-service:8000"
          ],
          "url_pattern": "/api/news/{news_id}"
        }
      ],
      "extra_config": {
        "permissions": "IsAdmin"
      }
    },
    {
      "endpoint": "/scrape",
      "method": "POST",
      "backend": [
        {
          "host": [
            "http://news-service:8000"
          ],
          "url_pattern": "/api/scrape"
        }
      ],
      "extra_config": {
        "permissions": "IsAdmin"
      }
    }
  ]
}
